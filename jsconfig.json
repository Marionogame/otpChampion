{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"baseUrl": "./src",
		"paths": {
			"@Api/*": ["./Api/*"],
			"@Components/*": ["./Components/*"],
			"@Features/*": ["./Features/*"],
			"@Hooks/*": ["./Hooks/*"],
			"@IndexedDB/*": ["./IndexedDB/*"],
			"@Modals/*": ["./Modals/*"],
			"@Redux/*": ["./Redux/*"],
			"@Actions/*": ["./Redux/Actions/*"],
			"@Socket/*": ["./Socket/*"],
			"@Styles/*": ["./Styles/*"],
			"@Utils/*": ["./Utils/*"]
